{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@diegesis-rcl/scripture-content-picker": [
        "libs/scripture-content-picker/src/index.ts"
      ],
      "@diegesis-rcl/scripture-content-picker-config": [
        "libs/scripture-content-picker-config/src/index.ts"
      ],
      "@diegesis-rcl/scripture-content-picker-interfaces": [
        "libs/scripture-content-picker-interfaces/src/index.ts"
      ],
      "@diegesis-rcl/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@diegesis-rcl/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
